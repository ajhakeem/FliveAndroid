<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- outer circle -->
    <item android:height="80dp" android:width="80dp" android:gravity="center">
        <shape
            android:shape="oval">

            <solid
                android:color="#c6c6c6"/>

            <gradient
                android:startColor="#c6c6c6"
                android:angle="45"/>

        </shape>
    </item>


    <!-- inner square -->
    <item android:height="40dp" android:width="40dp" android:gravity="center">
        <shape
            android:shape="rectangle">

            <solid
                android:color="#c60000"
                />

        </shape>
    </item>
</layer-list>